{
  "name": "server",
  "version": "1.0.0",
  "description": "PermaCoop is an eco-design and open-source ERP solution for cooperatives.",
  "author": "Mathieu MARCHOIS",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/src/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "migration:diff": "ts-node ./node_modules/.bin/typeorm migration:generate -d migrations -n",
    "migration:migrate": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:drop": "ts-node ./node_modules/.bin/typeorm schema:drop"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^6.11.11",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/typeorm": "^6.3.4",
    "argon2": "^0.25.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "crypto": "^1.0.1",
    "date-fns": "^2.12.0",
    "helmet": "^3.22.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "shortid": "^2.2.15",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.24",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^6.9.4",
    "@nestjs/testing": "^6.11.11",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.37",
    "@types/passport-http-bearer": "^1.0.35",
    "@types/supertest": "^2.0.9",
    "jest": "^25.5.4",
    "minimist": ">=1.2.2",
    "prettier": "^1.18.2",
    "serialize-javascript": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-loader": "^6.2.2",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "modulePaths": [
      "/var/www"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
